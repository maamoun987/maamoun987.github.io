<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/dark_background"
    tools:context=".MainActivity">

    <!-- Info Button in the top-right corner -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/infoButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_info"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/info"
            android:tint="@color/white"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp" />
    </RelativeLayout>

    <!-- Spinner for categories -->
    <Spinner
        android:id="@+id/categorySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/spinner_background"
        android:padding="8dp"
        android:popupBackground="@color/spinner_popup_background"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <!-- RecyclerView for radio channels -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/radioRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@drawable/divider"
        android:dividerHeight="1dp"
        android:padding="8dp"
        tools:listitem="@layout/item_radio_channel" />

    <!-- Now playing section -->
    <LinearLayout
        android:id="@+id/nowPlayingLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:visibility="gone"
        android:background="@color/now_playing_background"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/nowPlayingText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Now Playing: Radio Channel"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:ellipsize="end"
            android:maxLines="1" />

        <!-- Stop Button -->
        <ImageButton
            android:id="@+id/stopButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_stop"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/stop"
            android:tint="@color/white"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Volume control -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <ImageButton
            android:id="@+id/muteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_volume_off"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/mute"
            android:tint="@color/white" />

        <SeekBar
            android:id="@+id/volumeSeekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- Loading indicator -->
    <ProgressBar
        android:id="@+id/loadingIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- Empty view -->
    <TextView
        android:id="@+id/emptyView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_data"
        android:textColor="@color/white"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        android:textSize="18sp" />

    <!-- Update and Exit buttons in the center -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/updateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/button_background"
            android:text="@string/update"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/exitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/button_background"
            android:text="@string/exit"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>